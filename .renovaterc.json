{
    "extends": [
        "config:recommended"
    ],
    "repositories": [
        "ledniov/dependabot-demo"
    ],
    "kubernetes": {
        "fileMatch": [
            "kubernetes/.+/.+\\.yaml$"
        ]
    },
    "groupName": "all",
    "customManagers": [
        {
            "customType": "regex",
            "description": "Update Node version for in Github Actions",
            "fileMatch": [
                ".+\\.yml$"
            ],
            "matchStrings": [
                "\\s*#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?node-version:\\s*'(?<currentValue>.*)'"
            ],
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{/if}}"
        }
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "endoflife-date"
            ],
            "matchPackageNames": [
                "aws-lambda"
            ],
            "extractVersion": "^nodejs(?<version>.*)$"
        }
    ]
}